<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MarqueeTextView">
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:text" />
        <!--循环模式-->
        <attr name="marqueeRepeat" format="enum">
            <!-- 播放一次 -->
            <enum name="single" value="1" />
            <!-- 单项循环 -->
            <enum name="singleLoop" value="0" />
            <!-- 填充后循环 -->
            <enum name="fillLoop" value="-1" />
        </attr>
        <!--每个item之间的距离-->
        <attr name="marqueeItemDistance" format="dimension" />
        <!--开始的起始位置 按距离控件左边的百分比 0~1之间 -->
        <attr name="marqueeStartLocationDistance" format="float" />
        <!--播放速度 也就是文字滚动速度-->
        <attr name="marqueeSpeed" format="float" />
        <!--重新改变内容的时候 ， 是否初始化 位置，默认为true，改变-->
        <attr name="marqueeResetLocation" format="boolean" />
        <!--文本渐变的第一个颜色-->
        <attr name="gradientFirst" format="reference|color" />
        <!--文本渐变的第二个颜色-->
        <attr name="gradientSecond" format="reference|color" />
        <!--文本渐变的第三个颜色-->
        <attr name="gradientThird" format="reference|color" />
        <!--文本渐变的第四个颜色-->
        <attr name="gradientFourth" format="reference|color" />
        <!--渲染模式-->
        <attr name="tileMode" format="enum">
            <!--拉伸-->
            <enum name="CLAMP" value="0" />
            <!--重复-->
            <enum name="REPEAT" value="1" />
            <!--镜像-->
            <enum name="MIRROR" value="2" />
        </attr>
        <!--渐变样式-->
        <attr name="gradientStyle" format="enum">
            <!--左下角-->
            <enum name="lowerLeft" value="0" />
            <!--左上角-->
            <enum name="upperLeft" value="1" />
            <!--右下角-->
            <enum name="lowerRight" value="2" />
            <!--右上角-->
            <enum name="upperRight" value="3" />
            <!--左侧-->
            <enum name="left" value="4" />
            <!--右侧-->
            <enum name="right" value="5" />
            <!--上方-->
            <enum name="top" value="6" />
            <!--下方-->
            <enum name="bottom" value="7" />
        </attr>
    </declare-styleable>

</resources>